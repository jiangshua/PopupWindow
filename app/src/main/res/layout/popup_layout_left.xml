<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="@dimen/dimen_3dp"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/popup_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/popup_hint_white_bg"
    android:paddingLeft="@dimen/popup_text_left_right_padding"
    android:paddingRight="@dimen/popup_text_left_right_padding"
    android:paddingTop="@dimen/popup_text_top_bottom_padding"
    android:paddingBottom="@dimen/popup_text_top_bottom_padding"
    android:textSize="@dimen/text_size_14" />

  <ImageView
    android:id="@+id/popup_arrow"
    android:layout_width="@dimen/popup_horizontal_arrow_width"
    android:layout_height="@dimen/popup_horizontal_arrow_height"
    android:src="@drawable/popup_triangle_left_white"
    android:layout_gravity="center" />
</LinearLayout>
